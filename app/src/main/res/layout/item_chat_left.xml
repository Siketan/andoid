<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_chat_receiver">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars"
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:minWidth="@dimen/dimen_120dp"
            android:minHeight="@dimen/dimen_120dp"
            android:maxWidth="@dimen/dimen_200dp"
            android:maxHeight="@dimen/dimen_200dp"
            android:layout_marginTop="@dimen/dimen_2dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ini pesan dokter"
                android:textColor="@color/black"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20:23"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:layout_toEndOf="@id/tv_message"
                android:layout_below="@id/tv_message"
                tools:ignore="SmallSp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>