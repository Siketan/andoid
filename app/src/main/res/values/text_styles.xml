<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/secondary</item>
        <item name="colorError">@color/colorRed</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="autoCompleteTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MyText.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyText.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="MyText.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MyText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MyText.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MyText.Black">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="MyText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyText.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyText.Black.Black">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>